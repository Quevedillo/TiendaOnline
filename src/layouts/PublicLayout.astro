---
import BaseLayout from './BaseLayout.astro';
import CartIcon from '@components/islands/CartIcon';
import CartSlideOver from '@components/islands/CartSlideOver';
import UserMenu from '@components/islands/UserMenu';

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  {/* Header - Estilo Sneaker Store */}
  <header class="sticky top-0 z-30 bg-brand-black border-b border-brand-gray">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        {/* Logo */}
        <a href="/" class="flex items-center gap-2 group">
          <span class="text-xl font-display font-bold text-white tracking-wider uppercase">
            KICKS<span class="text-brand-red">PREMIUM</span>
          </span>
          <span class="text-xs text-brand-red font-bold uppercase tracking-wider opacity-0 group-hover:opacity-100 transition-opacity">Exclusive</span>
        </a>

        {/* Navigation */}
        <nav class="hidden md:flex items-center gap-8">
          <a href="/" class="text-sm font-bold text-white/80 hover:text-brand-red transition-colors uppercase tracking-wide">
            Inicio
          </a>
          <a href="/productos" class="text-sm font-bold text-white/80 hover:text-brand-red transition-colors uppercase tracking-wide">
            Catalogo
          </a>
          <a href="/categoria/travis-scott" class="text-sm font-bold text-white/80 hover:text-brand-red transition-colors uppercase tracking-wide">
            Travis Scott
          </a>
          <a href="/categoria/jordan-special" class="text-sm font-bold text-white/80 hover:text-brand-red transition-colors uppercase tracking-wide">
            Jordan Special
          </a>
          <a href="/categoria/limited-editions" class="text-sm font-bold text-brand-red hover:text-brand-orange transition-colors uppercase tracking-wide">
            Exclusive Drops
          </a>
        </nav>

        {/* Right Side - User Menu & Cart */}
        <div class="flex items-center gap-4">
          <UserMenu client:only="react" />
          <CartIcon client:only="react" />
        </div>
      </div>
    </div>
  </header>

  {/* Main Content */}
  <main class="min-h-screen bg-brand-dark">
    <slot />
  </main>

  {/* Footer - Estilo Sneaker */}
  <footer class="bg-brand-black text-white border-t border-brand-gray">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
        {/* Brand */}
        <div>
          <h3 class="text-xl font-display font-bold mb-4 uppercase tracking-wider">
            KICKS<span class="text-brand-red">PREMIUM</span>
          </h3>
          <p class="text-neutral-400 text-sm">
            Tu destino para sneakers auténticos. Jordan, Nike, Adidas, Yeezy y más.
          </p>
          <div class="flex gap-4 mt-4">
            <a href="#" class="text-sm hover:text-brand-red transition-colors">Instagram</a>
            <a href="#" class="text-sm hover:text-brand-red transition-colors">Twitter</a>
            <a href="#" class="text-sm hover:text-brand-red transition-colors">TikTok</a>
          </div>
        </div>

        {/* Links */}
        <div>
          <h4 class="font-bold mb-4 uppercase tracking-wide text-brand-red">Tienda</h4>
          <ul class="space-y-2 text-sm text-neutral-400">
            <li><a href="/productos" class="hover:text-white transition-colors">Todos los Kicks</a></li>
            <li><a href="/categoria/travis-scott" class="hover:text-white transition-colors">Travis Scott</a></li>
            <li><a href="/categoria/jordan-special" class="hover:text-white transition-colors">Jordan Special</a></li>
            <li><a href="/categoria/adidas-collab" class="hover:text-white transition-colors">Adidas Collab</a></li>
            <li><a href="/categoria/limited-editions" class="hover:text-white transition-colors">Exclusive Drops</a></li>
          </ul>
        </div>

        {/* Support */}
        <div>
          <h4 class="font-bold mb-4 uppercase tracking-wide text-brand-red">Ayuda</h4>
          <ul class="space-y-2 text-sm text-neutral-400">
            <li><a href="#" class="hover:text-white transition-colors">Guía de Tallas</a></li>
            <li><a href="#" class="hover:text-white transition-colors">Autenticidad</a></li>
            <li><a href="#" class="hover:text-white transition-colors">Envíos</a></li>
            <li><a href="#" class="hover:text-white transition-colors">Devoluciones</a></li>
            <li><a href="#" class="hover:text-white transition-colors">FAQ</a></li>
          </ul>
        </div>

        {/* Newsletter */}
        <div>
          <h4 class="font-bold mb-4 uppercase tracking-wide text-brand-red">Drops Alert</h4>
          <p class="text-neutral-400 text-sm mb-4">
            Sé el primero en enterarte de los nuevos lanzamientos.
          </p>
          <div class="flex">
            <input 
              type="email" 
              placeholder="tu@email.com" 
              class="bg-brand-gray border border-brand-gray text-white px-4 py-2 text-sm flex-1 focus:outline-none focus:border-brand-red"
            />
            <button class="bg-brand-red text-white px-4 py-2 text-sm font-bold uppercase hover:bg-brand-orange transition-colors">
              →
            </button>
          </div>
        </div>
      </div>

      {/* Divider */}
      <div class="border-t border-brand-gray pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-neutral-500 text-sm">
          © 2026 KicksPremium. Todos los derechos reservados.
        </p>
        <div class="flex gap-4 text-sm text-neutral-500">
          <span>✓ 100% Auténtico</span>
          <span>✓ Envío Express</span>
          <span>✓ Garantía</span>
        </div>
      </div>
    </div>
  </footer>

  {/* Cart Slide Over */}
  <CartSlideOver client:only="react" />
</BaseLayout>
