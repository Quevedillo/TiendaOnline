---
import BaseLayout from './BaseLayout.astro';
import { supabase } from '@lib/supabase';

interface Props {
  title?: string;
  description?: string;
  currentPage?: string;
}

const { title, description, currentPage = 'dashboard' } = Astro.props;

// Obtener usuario de la sesión
const user = Astro.locals.user;
const userEmail = user?.email || 'Admin';

// Navegación del admin
const navItems = [
  { id: 'dashboard', label: 'Dashboard', href: '/admin', icon: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6' },
  { id: 'productos', label: 'Productos', href: '/admin/productos', icon: 'M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4' },
  { id: 'pedidos', label: 'Pedidos', href: '/admin/pedidos', icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01' },
  { id: 'finanzas', label: 'Finanzas', href: '/admin/finanzas', icon: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z' },
  { id: 'categorias', label: 'Categorías', href: '/admin/categorias', icon: 'M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z' },
  { id: 'usuarios', label: 'Usuarios', href: '/admin/usuarios', icon: 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z' },
];

const secondaryNavItems = [
  { id: 'configuracion', label: 'Configuración', href: '/admin/configuracion', icon: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z' },
];
---

<BaseLayout title={title} description={description}>
  <div class="flex min-h-screen bg-neutral-100">
    {/* Sidebar */}
    <aside class="w-72 bg-brand-black text-white flex flex-col fixed h-full z-10">
      {/* Logo */}
      <div class="p-6 border-b border-neutral-800">
        <a href="/admin" class="flex items-center gap-3">
          <div class="w-10 h-10 bg-brand-red rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-xl">K</span>
          </div>
          <div>
            <h1 class="font-display font-bold text-lg">KicksPremium</h1>
            <p class="text-neutral-500 text-xs">Panel Admin</p>
          </div>
        </a>
      </div>

      {/* Navigation */}
      <nav class="flex-1 p-4 overflow-y-auto">
        <p class="text-neutral-500 text-xs font-semibold uppercase tracking-wider mb-4 px-3">
          Principal
        </p>
        <ul class="space-y-1">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class={`flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium transition-all duration-200
                  ${currentPage === item.id 
                    ? 'bg-brand-red text-white shadow-lg shadow-brand-red/20' 
                    : 'text-neutral-400 hover:text-white hover:bg-neutral-800'
                  }`}
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
                </svg>
                {item.label}
              </a>
            </li>
          ))}
        </ul>

        <p class="text-neutral-500 text-xs font-semibold uppercase tracking-wider mt-8 mb-4 px-3">
          Sistema
        </p>
        <ul class="space-y-1">
          {secondaryNavItems.map((item) => (
            <li>
              <a
                href={item.href}
                class={`flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium transition-all duration-200
                  ${currentPage === item.id 
                    ? 'bg-brand-red text-white shadow-lg shadow-brand-red/20' 
                    : 'text-neutral-400 hover:text-white hover:bg-neutral-800'
                  }`}
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
                </svg>
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      {/* User Section */}
      <div class="p-4 border-t border-neutral-800">
        <div class="flex items-center gap-3 px-3 py-2">
          <div class="w-9 h-9 bg-brand-red rounded-full flex items-center justify-center">
            <span class="text-white font-bold text-sm">
              {userEmail.charAt(0).toUpperCase()}
            </span>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium text-white truncate">{userEmail}</p>
            <p class="text-xs text-neutral-500">Administrador</p>
          </div>
        </div>
        
        <div class="mt-3 flex gap-2">
          <a
            href="/"
            class="flex-1 px-3 py-2 text-center text-xs font-medium text-neutral-400 hover:text-white hover:bg-neutral-800 rounded-lg transition-colors"
          >
            Ver tienda
          </a>
          <form action="/api/auth/logout" method="POST" class="flex-1">
            <button
              type="submit"
              class="w-full px-3 py-2 text-xs font-medium text-red-400 hover:text-red-300 hover:bg-red-900/20 rounded-lg transition-colors"
            >
              Cerrar sesión
            </button>
          </form>
        </div>
      </div>
    </aside>

    {/* Main Content */}
    <main class="flex-1 ml-72">
      {/* Top Header */}
      <header class="bg-white border-b border-neutral-200 px-8 py-4 sticky top-0 z-10">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-xl font-display font-bold text-brand-black">
              {title?.replace(' - KicksPremium', '').replace(' Admin', '')}
            </h2>
          </div>
          <div class="flex items-center gap-4">
            {/* Quick Actions */}
            <a
              href="/admin/productos/nuevo"
              class="inline-flex items-center gap-2 px-4 py-2 bg-brand-red text-white text-sm font-semibold rounded-lg hover:bg-brand-orange transition-colors"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Nuevo Producto
            </a>
          </div>
        </div>
      </header>

      {/* Page Content */}
      <div class="p-8">
        <slot />
      </div>
    </main>
  </div>
</BaseLayout>
