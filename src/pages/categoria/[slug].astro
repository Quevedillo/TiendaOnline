---
import PublicLayout from '@layouts/PublicLayout.astro';
import ProductCard from '@components/product/ProductCard.astro';
import { supabase } from '@lib/supabase';
import type { Product } from '@lib/supabase';

const { slug } = Astro.params;

// Fetch category and its products
const { data: category } = await supabase
  .from('categories')
  .select('*')
  .eq('slug', slug)
  .single();

const { data: products } = await supabase
  .from('products')
  .select('*')
  .eq('category_id', category?.id)
  .eq('status', 'active')
  .order('created_at', { ascending: false });

const productsList: Product[] = products || [];

// Generate static paths
export async function getStaticPaths() {
  const { data: categories } = await supabase
    .from('categories')
    .select('slug');

  return (categories || []).map((c) => ({
    params: { slug: c.slug },
  }));
}
---

<PublicLayout title={`${category?.name} - FashionMarket`} description={category?.description}>
  {/* Header */}
  <section class="bg-white border-b border-neutral-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <a
        href="/productos"
        class="text-brand-navy hover:text-brand-charcoal mb-4 inline-block"
      >
        ← Volver al catálogo
      </a>
      <h1 class="text-4xl font-display font-bold text-brand-navy">
        {category?.name}
      </h1>
      <p class="text-neutral-600 mt-2">
        {productsList.length} productos disponibles
      </p>
    </div>
  </section>

  {/* Products Grid */}
  <section class="py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {productsList.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {productsList.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg">
            No hay productos en esta categoría.
          </p>
        </div>
      )}
    </div>
  </section>
</PublicLayout>
