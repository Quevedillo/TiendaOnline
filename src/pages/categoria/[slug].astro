---
import PublicLayout from '@layouts/PublicLayout.astro';
import { supabase } from '@lib/supabase';
import type { Product } from '@lib/supabase';

const { slug } = Astro.params;

// Get sort parameter
const url = new URL(Astro.request.url);
const sortFilter = url.searchParams.get('sort') || 'newest'; // newest, price-asc, price-desc

// Fetch category and its products
const { data: category } = await supabase
  .from('categories')
  .select('*')
  .eq('slug', slug)
  .single();

// If category not found, redirect to products page
if (!category) {
  return Astro.redirect('/productos');
}

let productsQuery = supabase
  .from('products')
  .select('*')
  .eq('category_id', category.id)
  .eq('status', 'active');

// Apply sort
if (sortFilter === 'price-asc') {
  productsQuery = productsQuery.order('price', { ascending: true });
} else if (sortFilter === 'price-desc') {
  productsQuery = productsQuery.order('price', { ascending: false });
} else {
  productsQuery = productsQuery.order('created_at', { ascending: false });
}

const { data: products } = await productsQuery;

const productsList: Product[] = products || [];

// Category emoji map
const categoryEmojis: Record<string, string> = {
  'basketball': 'Basketball',
  'lifestyle': 'Lifestyle',
  'running': 'Running',
  'limited-editions': 'Limited',
  'skateboarding': 'Skateboarding',
};
---

<PublicLayout title={`${category?.name || 'Categoría'} - KicksPremium`} description={category?.description}>
  {/* Header */}
  <section class="bg-brand-black border-b border-brand-gray">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <a
        href="/productos"
        class="text-brand-red hover:text-brand-orange mb-4 inline-flex items-center gap-2 font-bold uppercase text-sm"
      >
        ← Volver al catálogo
      </a>
      <div class="flex items-center gap-4 mt-4">
        <span class="text-5xl text-neutral-500">•</span>
        <div>
          <h1 class="text-4xl md:text-5xl font-display font-bold text-white uppercase tracking-tight">
            {category?.name || 'Categoría'}
          </h1>
          <p class="text-neutral-500 mt-2">
            {productsList.length} sneakers disponibles
          </p>
        </div>
      </div>
      {category?.description && (
        <p class="text-neutral-400 mt-4 max-w-2xl">
          {category.description}
        </p>
      )}
    </div>
  </section>

  {/* Sort Section */}
  <section class="bg-brand-gray border-b border-brand-black sticky top-16 z-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center gap-2">
        <span class="text-neutral-500 text-sm uppercase font-bold">Ordenar:</span>
        <a 
          href={`/categoria/${category.slug}`}
          class={`px-3 py-1.5 text-xs font-bold uppercase transition-colors ${!sortFilter || sortFilter === 'newest' ? 'bg-brand-red text-white' : 'bg-brand-dark text-white/70 hover:bg-brand-red hover:text-white'}`}
        >
          Más recientes
        </a>
        <a 
          href={`/categoria/${category.slug}?sort=price-asc`}
          class={`px-3 py-1.5 text-xs font-bold uppercase transition-colors ${sortFilter === 'price-asc' ? 'bg-brand-red text-white' : 'bg-brand-dark text-white/70 hover:bg-brand-red hover:text-white'}`}
        >
          Precio: Menor a Mayor
        </a>
        <a 
          href={`/categoria/${category.slug}?sort=price-desc`}
          class={`px-3 py-1.5 text-xs font-bold uppercase transition-colors ${sortFilter === 'price-desc' ? 'bg-brand-red text-white' : 'bg-brand-dark text-white/70 hover:bg-brand-red hover:text-white'}`}
        >
          Precio: Mayor a Menor
        </a>
      </div>
    </div>
  </section>

  {/* Products Grid */}
  <section class="py-12 bg-brand-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {productsList.length > 0 ? (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {productsList.map((product) => (
            <a href={`/productos/${product.slug}`} class="group bg-brand-gray overflow-hidden hover:scale-[1.02] transition-all">
              {/* Image */}
              <div class="aspect-square bg-brand-dark relative overflow-hidden">
                {product.is_limited_edition && (
                  <div class="absolute top-3 left-3 bg-brand-red text-white text-xs font-bold px-2 py-1 z-10 uppercase">
                    Limited
                  </div>
                )}
                {product.stock <= 5 && product.stock > 0 && (
                  <div class="absolute top-3 right-3 bg-brand-orange text-white text-xs font-bold px-2 py-1 z-10 uppercase">
                    Últimas {product.stock}
                  </div>
                )}
                <img 
                  src={product.images?.[0] || 'https://via.placeholder.com/400x400?text=Sneaker'}
                  alt={product.name}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
              </div>
              {/* Info */}
              <div class="p-4">
                <div class="text-brand-red text-xs font-bold uppercase tracking-wider mb-1">
                  {product.brand}
                </div>
                <h3 class="text-white font-bold group-hover:text-brand-red transition-colors line-clamp-2">
                  {product.name}
                </h3>
                <div class="flex items-center justify-between mt-3">
                  <div class="flex items-center gap-2">
                    <span class="text-white font-bold text-lg">
                      €{(product.price / 100).toFixed(0)}
                    </span>
                    {product.original_price && product.original_price > product.price && (
                      <span class="text-neutral-500 line-through text-sm">
                        €{(product.original_price / 100).toFixed(0)}
                      </span>
                    )}
                  </div>
                  <span class="text-brand-red text-sm">→</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-20">
          <div class="text-6xl mb-4 text-neutral-500">•</div>
          <p class="text-neutral-500 text-lg">
            No hay sneakers en esta categoría.
          </p>
          <a
            href="/productos"
            class="inline-block mt-6 bg-brand-red text-white px-6 py-3 font-bold uppercase hover:bg-brand-orange transition-colors"
          >
            Ver todo el catálogo
          </a>
        </div>
      )}
    </div>
  </section>
</PublicLayout>
