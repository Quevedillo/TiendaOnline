---
import PublicLayout from '@layouts/PublicLayout.astro';
import { supabase } from '@lib/supabase';
import type { Product } from '@lib/supabase';

// Get query params for filtering
const url = new URL(Astro.request.url);
const brandFilter = url.searchParams.get('brand');
const colorFilter = url.searchParams.get('color');
const categoryFilter = url.searchParams.get('category');
const sortFilter = url.searchParams.get('sort') || 'newest'; // newest, price-asc, price-desc

// Fetch brands for filter
const { data: brands } = await supabase
  .from('brands')
  .select('*')
  .order('display_order');

// Fetch colors for filter
const { data: colors } = await supabase
  .from('colors')
  .select('*')
  .order('display_order');

// Fetch categories for filter
const { data: categories } = await supabase
  .from('categories')
  .select('*')
  .order('display_order');

// Build products query with filters
let productsQuery = supabase
  .from('products')
  .select('*, categories(name, slug)');

// Apply sort
if (sortFilter === 'price-asc') {
  productsQuery = productsQuery.order('price', { ascending: true });
} else if (sortFilter === 'price-desc') {
  productsQuery = productsQuery.order('price', { ascending: false });
} else {
  productsQuery = productsQuery.order('created_at', { ascending: false });
}

if (brandFilter) {
  productsQuery = productsQuery.eq('brand', brandFilter);
}

if (colorFilter) {
  productsQuery = productsQuery.eq('color', colorFilter);
}

if (categoryFilter) {
  const category = categories?.find(c => c.slug === categoryFilter);
  if (category) {
    productsQuery = productsQuery.eq('category_id', category.id);
  }
}

// Filtrar solo productos con stock > 0
productsQuery = productsQuery.gt('stock', 0);

const { data: products, error } = await productsQuery;

let filteredProducts = products || [];

if (error) {
  console.error('Error fetching products:', error);
}

const productsList: Product[] = filteredProducts;

// Active filters info
const activeFilters = {
  brand: brandFilter,
  color: colorFilter,
  category: categoryFilter,
  sort: sortFilter,
};
const hasFilters = brandFilter || colorFilter || categoryFilter;
---

<PublicLayout title="Catálogo Exclusivo - KicksPremium" description="Colecciones limitadas y exclusivas de sneakers: Travis Scott, Jordan Special, Adidas Collab y ediciones raras">
  {/* Header */}
  <section class="bg-brand-black border-b border-brand-gray">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4">
        <div>
          <div class="text-brand-red font-bold uppercase text-sm tracking-wider mb-2">Colección Exclusiva</div>
          <h1 class="text-4xl md:text-5xl font-display font-bold text-white uppercase tracking-tight">
            Sneakers Limitados
          </h1>
        </div>
        <p class="text-neutral-500">
          {productsList.length} sneakers disponibles
        </p>
      </div>
    </div>
  </section>

  {/* Filters Section */}
  <section class="bg-brand-gray border-b border-brand-black sticky top-16 z-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex flex-col lg:flex-row gap-4">
        {/* Category Filter */}
        <div class="flex flex-wrap gap-2 items-center">
          <span class="text-neutral-500 text-sm uppercase font-bold">Estilo:</span>
          <a 
            href="/productos" 
            class={`px-3 py-1.5 text-xs font-bold uppercase transition-colors ${!categoryFilter ? 'bg-brand-red text-white' : 'bg-brand-dark text-white/70 hover:bg-brand-red hover:text-white'}`}
          >
            Todos
          </a>
          {categories?.map(cat => (
            <a 
              href={`/productos?category=${cat.slug}${brandFilter ? `&brand=${brandFilter}` : ''}${colorFilter ? `&color=${colorFilter}` : ''}`}
              class={`px-3 py-1.5 text-xs font-bold uppercase transition-colors ${categoryFilter === cat.slug ? 'bg-brand-red text-white' : 'bg-brand-dark text-white/70 hover:bg-brand-red hover:text-white'}`}
            >
              {cat.icon} {cat.name}
            </a>
          ))}
        </div>

        {/* Brand Filter */}
        <div class="flex flex-wrap gap-2 items-center">
          <span class="text-neutral-500 text-sm uppercase font-bold">Marca:</span>
          <a 
            href={`/productos${categoryFilter ? `?category=${categoryFilter}` : ''}${colorFilter ? `${categoryFilter ? '&' : '?'}color=${colorFilter}` : ''}`}
            class={`px-3 py-1.5 text-xs font-bold uppercase transition-colors ${!brandFilter ? 'bg-brand-red text-white' : 'bg-brand-dark text-white/70 hover:bg-brand-red hover:text-white'}`}
          >
            Todas
          </a>
          {brands?.filter(b => b.is_featured).map(brand => (
            <a 
              href={`/productos?brand=${brand.name}${categoryFilter ? `&category=${categoryFilter}` : ''}${colorFilter ? `&color=${colorFilter}` : ''}`}
              class={`px-3 py-1.5 text-xs font-bold uppercase transition-colors ${brandFilter === brand.name ? 'bg-brand-red text-white' : 'bg-brand-dark text-white/70 hover:bg-brand-red hover:text-white'}`}
            >
              {brand.name}
            </a>
          ))}
        </div>

        {/* Color Filter */}
        <div class="flex flex-wrap gap-2 items-center">
          <span class="text-neutral-500 text-sm uppercase font-bold">Color:</span>
          <a 
            href={`/productos${categoryFilter ? `?category=${categoryFilter}` : ''}${brandFilter ? `${categoryFilter ? '&' : '?'}brand=${brandFilter}` : ''}`}
            class={`px-3 py-1.5 text-xs font-bold uppercase transition-colors ${!colorFilter ? 'bg-brand-red text-white' : 'bg-brand-dark text-white/70 hover:bg-brand-red hover:text-white'}`}
          >
            Todos
          </a>
          {colors?.slice(0, 8).map(color => (
            <a 
              href={`/productos?color=${color.slug}${categoryFilter ? `&category=${categoryFilter}` : ''}${brandFilter ? `&brand=${brandFilter}` : ''}`}
              class={`px-3 py-1.5 text-xs font-bold uppercase transition-colors flex items-center gap-1.5 ${colorFilter === color.slug ? 'bg-brand-red text-white' : 'bg-brand-dark text-white/70 hover:bg-brand-red hover:text-white'}`}
            >
              <span 
                class="w-3 h-3 rounded-full border border-white/30" 
                style={`background-color: ${color.hex_code}`}
              ></span>
              {color.name}
            </a>
          ))}
        </div>

        {/* Sort Filter */}
        <div class="flex flex-wrap gap-2 items-center ml-auto">
          <span class="text-neutral-500 text-sm uppercase font-bold">Ordenar:</span>
          <a 
            href={`/productos${categoryFilter ? `?category=${categoryFilter}` : ''}${brandFilter ? `${categoryFilter ? '&' : '?'}brand=${brandFilter}` : ''}${colorFilter ? `${categoryFilter || brandFilter ? '&' : '?'}color=${colorFilter}` : ''}`}
            class={`px-3 py-1.5 text-xs font-bold uppercase transition-colors ${!sortFilter || sortFilter === 'newest' ? 'bg-brand-red text-white' : 'bg-brand-dark text-white/70 hover:bg-brand-red hover:text-white'}`}
          >
            Más recientes
          </a>
          <a 
            href={`/productos?sort=price-asc${categoryFilter ? `&category=${categoryFilter}` : ''}${brandFilter ? `&brand=${brandFilter}` : ''}${colorFilter ? `&color=${colorFilter}` : ''}`}
            class={`px-3 py-1.5 text-xs font-bold uppercase transition-colors ${sortFilter === 'price-asc' ? 'bg-brand-red text-white' : 'bg-brand-dark text-white/70 hover:bg-brand-red hover:text-white'}`}
          >
            Precio: Menor a Mayor
          </a>
          <a 
            href={`/productos?sort=price-desc${categoryFilter ? `&category=${categoryFilter}` : ''}${brandFilter ? `&brand=${brandFilter}` : ''}${colorFilter ? `&color=${colorFilter}` : ''}`}
            class={`px-3 py-1.5 text-xs font-bold uppercase transition-colors ${sortFilter === 'price-desc' ? 'bg-brand-red text-white' : 'bg-brand-dark text-white/70 hover:bg-brand-red hover:text-white'}`}
          >
            Precio: Mayor a Menor
          </a>
        </div>

      {/* Active Filters Display */}
      {hasFilters && (
        <div class="mt-4 flex items-center gap-2">
          <span class="text-neutral-500 text-sm">Filtros activos:</span>
          {brandFilter && (
            <span class="bg-brand-red/20 text-brand-red px-2 py-1 text-xs font-bold">
              Marca: {brandFilter}
            </span>
          )}
          {colorFilter && (
            <span class="bg-brand-red/20 text-brand-red px-2 py-1 text-xs font-bold">
              Color: {colors?.find(c => c.slug === colorFilter)?.name}
            </span>
          )}
          {categoryFilter && (
            <span class="bg-brand-red/20 text-brand-red px-2 py-1 text-xs font-bold">
              Categoría: {categories?.find(c => c.slug === categoryFilter)?.name}
            </span>
          )}
          <a href="/productos" class="text-brand-red hover:text-brand-orange text-sm font-bold ml-2">
            ✕ Limpiar filtros
          </a>
        </div>
      )}
    </div>
  </section>

  {/* Products Grid */}
  <section class="py-12 bg-brand-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {productsList.length > 0 ? (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {productsList.map((product) => (
            <a href={`/productos/${product.slug}`} class="group bg-brand-gray overflow-hidden hover:scale-[1.02] transition-all">
              {/* Image */}
              <div class="aspect-square bg-brand-dark relative overflow-hidden">
                {product.is_limited_edition && (
                  <div class="absolute top-3 left-3 bg-brand-red text-white text-xs font-bold px-2 py-1 z-10 uppercase">
                    Limited
                  </div>
                )}
                {product.stock <= 5 && product.stock > 0 && (
                  <div class="absolute top-3 right-3 bg-brand-orange text-white text-xs font-bold px-2 py-1 z-10 uppercase">
                    Últimas {product.stock}
                  </div>
                )}
                <img 
                  src={product.images?.[0] || 'https://via.placeholder.com/400x400?text=Sneaker'}
                  alt={product.name}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
              </div>
              {/* Info */}
              <div class="p-4">
                <div class="text-brand-red text-xs font-bold uppercase tracking-wider mb-1">
                  {product.brand}
                </div>
                <h3 class="text-white font-bold group-hover:text-brand-red transition-colors line-clamp-2">
                  {product.name}
                </h3>
                <div class="flex items-center justify-between mt-3">
                  <div class="flex items-center gap-2">
                    <span class="text-white font-bold text-lg">
                      €{(product.price / 100).toFixed(0)}
                    </span>
                    {product.original_price && product.original_price > product.price && (
                      <span class="text-neutral-500 line-through text-sm">
                        €{(product.original_price / 100).toFixed(0)}
                      </span>
                    )}
                  </div>
                  <span class="text-brand-red text-sm">→</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-20">
          <div class="text-6xl mb-4 text-neutral-500">•</div>
          <p class="text-neutral-500 text-lg">
            No hay sneakers que coincidan con los filtros seleccionados.
          </p>
          <a
            href="/productos"
            class="inline-block mt-6 bg-brand-red text-white px-6 py-3 font-bold uppercase hover:bg-brand-orange transition-colors"
          >
            Ver todo el catálogo
          </a>
        </div>
      )}
    </div>
  </section>
</PublicLayout>
