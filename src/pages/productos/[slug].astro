---
import PublicLayout from '@layouts/PublicLayout.astro';
import ProductGallery from '@components/product/ProductGallery.astro';
import AddToCartButton from '@components/islands/AddToCartButton';
import { supabase } from '@lib/supabase';
import type { Product } from '@lib/supabase';

const { slug } = Astro.params;

// Fetch product by slug
const { data: product, error } = await supabase
  .from('products')
  .select('*, categories(name, slug)')
  .eq('slug', slug)
  .single();

if (error || !product) {
  return Astro.redirect('/productos');
}

const formatPrice = (cents: number) => {
  return `$${(cents / 100).toFixed(0)}`;
};

// Fetch related products
const { data: relatedProducts } = await supabase
  .from('products')
  .select('*')
  .eq('category_id', product.category_id)
  .neq('id', product.id)
  .limit(4);
---

<PublicLayout title={`${product.name} - KicksPremium`} description={product.description}>
  {/* Breadcrumb */}
  <div class="bg-brand-black border-b border-brand-gray">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center gap-2 text-sm text-neutral-500">
        <a href="/" class="hover:text-brand-red transition-colors">Inicio</a>
        <span>/</span>
        <a href="/productos" class="hover:text-brand-red transition-colors">Cat√°logo</a>
        <span>/</span>
        <span class="text-white">{product.name}</span>
      </div>
    </div>
  </div>

  {/* Product Detail */}
  <section class="py-12 bg-brand-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        {/* Gallery */}
        <div class="bg-brand-gray p-4 relative">
          {product.is_limited_edition && (
            <div class="absolute top-6 left-6 bg-brand-red text-white text-sm font-bold px-3 py-1 z-10 uppercase">
              üî• Limited Edition
            </div>
          )}
          <ProductGallery
            images={product.images || []}
            productName={product.name}
          />
        </div>

        {/* Product Info */}
        <div class="space-y-6">
          {/* Brand & Category */}
          <div class="flex items-center gap-3">
            <span class="text-brand-red font-bold uppercase text-sm tracking-wider">
              {product.brand}
            </span>
            {product.categories?.slug && (
              <>
                <span class="text-neutral-600">‚Ä¢</span>
                <a
                  href={`/categoria/${product.categories.slug}`}
                  class="text-neutral-500 hover:text-brand-red transition-colors text-sm uppercase"
                >
                  {product.categories?.name || 'Sin categor√≠a'}
                </a>
              </>
            )}
          </div>

          {/* Title */}
          <div>
            <h1 class="text-3xl md:text-4xl font-display font-bold text-white uppercase tracking-tight mb-4">
              {product.name}
            </h1>
            <div class="flex items-center gap-4">
              <span class="text-3xl font-bold text-white">
                {formatPrice(product.price)}
              </span>
              {product.original_price && product.original_price > product.price && (
                <>
                  <span class="text-xl text-neutral-500 line-through">
                    {formatPrice(product.original_price)}
                  </span>
                  <span class="bg-brand-red text-white text-sm font-bold px-2 py-1">
                    -{Math.round((1 - product.price / product.original_price) * 100)}%
                  </span>
                </>
              )}
            </div>
          </div>

          {/* Stock Status */}
          <div class="flex items-center gap-2">
            {product.stock > 10 ? (
              <span class="text-green-500 text-sm font-bold">‚úì En stock</span>
            ) : product.stock > 0 ? (
              <span class="text-brand-orange text-sm font-bold">‚ö† Solo {product.stock} disponibles</span>
            ) : (
              <span class="text-red-500 text-sm font-bold">‚úó Agotado</span>
            )}
          </div>

          {/* Description */}
          <div class="border-t border-brand-gray pt-6">
            <p class="text-neutral-400 leading-relaxed">
              {product.description}
            </p>
          </div>

          {/* Add to Cart Component (Island) */}
          <div class="pt-4">
            <AddToCartButton product={product} client:load />
          </div>

          {/* Additional Info */}
          <div class="border-t border-brand-gray pt-6 space-y-6">
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-brand-gray p-4">
                <div class="text-brand-red text-xl mb-2">üöö</div>
                <h4 class="text-white font-bold text-sm">Env√≠o Express</h4>
                <p class="text-neutral-500 text-xs mt-1">24-48h en Pen√≠nsula</p>
              </div>
              <div class="bg-brand-gray p-4">
                <div class="text-brand-red text-xl mb-2">‚úì</div>
                <h4 class="text-white font-bold text-sm">100% Aut√©ntico</h4>
                <p class="text-neutral-500 text-xs mt-1">Garant√≠a de autenticidad</p>
              </div>
              <div class="bg-brand-gray p-4">
                <div class="text-brand-red text-xl mb-2">‚Ü©Ô∏è</div>
                <h4 class="text-white font-bold text-sm">Devoluci√≥n Gratis</h4>
                <p class="text-neutral-500 text-xs mt-1">30 d√≠as sin preguntas</p>
              </div>
              <div class="bg-brand-gray p-4">
                <div class="text-brand-red text-xl mb-2">üîí</div>
                <h4 class="text-white font-bold text-sm">Pago Seguro</h4>
                <p class="text-neutral-500 text-xs mt-1">SSL + 3D Secure</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Related Products */}
  {relatedProducts && relatedProducts.length > 0 && (
    <section class="py-12 bg-brand-black">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl font-display font-bold text-white uppercase">
            Tambi√©n te puede gustar
          </h2>
          <a
            href={`/categoria/${product.categories?.slug}`}
            class="text-brand-red hover:text-brand-orange font-bold text-sm uppercase"
          >
            Ver m√°s ‚Üí
          </a>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {relatedProducts.map((related) => (
            <a href={`/productos/${related.slug}`} class="group bg-brand-gray overflow-hidden hover:scale-[1.02] transition-all">
              <div class="aspect-square bg-brand-dark relative overflow-hidden">
                <img 
                  src={related.images?.[0] || 'https://via.placeholder.com/400x400?text=Sneaker'}
                  alt={related.name}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
              </div>
              <div class="p-3">
                <div class="text-brand-red text-xs font-bold uppercase">{related.brand}</div>
                <h3 class="text-white text-sm font-bold group-hover:text-brand-red transition-colors line-clamp-1">
                  {related.name}
                </h3>
                <span class="text-white font-bold">${(related.price / 100).toFixed(0)}</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}
</PublicLayout>
