---
import PublicLayout from '@layouts/PublicLayout.astro';
import ProductGallery from '@components/product/ProductGallery.astro';
import AddToCartButton from '@components/islands/AddToCartButton';
import { supabase } from '@lib/supabase';
import type { Product } from '@lib/supabase';

const { slug } = Astro.params;

// Fetch product by slug (SSG with dynamic routes)
const { data: product, error } = await supabase
  .from('products')
  .select('*, categories(name)')
  .eq('slug', slug)
  .single();

if (error || !product) {
  return Astro.redirect('/productos');
}

const formatPrice = (cents: number) => {
  return `$${(cents / 100).toFixed(2)}`;
};

// Generate static paths
export async function getStaticPaths() {
  const { data: products } = await supabase
    .from('products')
    .select('slug');

  return (products || []).map((p) => ({
    params: { slug: p.slug },
  }));
}
---

<PublicLayout title={product.name} description={product.description}>
  {/* Breadcrumb */}
  <div class="bg-white border-b border-neutral-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center gap-2 text-sm text-neutral-600">
        <a href="/" class="hover:text-brand-navy">Inicio</a>
        <span>/</span>
        <a href="/productos" class="hover:text-brand-navy">Catálogo</a>
        <span>/</span>
        <span class="text-neutral-900">{product.name}</span>
      </div>
    </div>
  </div>

  {/* Product Detail */}
  <section class="py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        {/* Gallery */}
        <div>
          <ProductGallery
            images={product.images || []}
            productName={product.name}
          />
        </div>

        {/* Product Info */}
        <div class="space-y-6">
          {/* Category */}
          <div>
            <a
              href={`/categoria/${product.category_id}`}
              class="inline-block text-sm font-medium text-brand-gold hover:text-brand-navy transition-colors"
            >
              {product.categories?.name || 'Sin categoría'}
            </a>
          </div>

          {/* Title */}
          <div>
            <h1 class="text-4xl font-display font-bold text-brand-navy mb-2">
              {product.name}
            </h1>
            <p class="text-xl font-bold text-brand-charcoal">
              {formatPrice(product.price)}
            </p>
          </div>

          {/* Description */}
          <div class="prose prose-sm max-w-none">
            <p class="text-neutral-700 leading-relaxed">
              {product.description}
            </p>
          </div>

          {/* Add to Cart Component (Island) */}
          <AddToCartButton product={product} client:load />

          {/* Additional Info */}
          <div class="border-t border-neutral-200 pt-6 space-y-4">
            <div>
              <h3 class="font-semibold text-neutral-900 mb-2">Detalles</h3>
              <ul class="space-y-1 text-sm text-neutral-600">
                <li>✓ Material premium de alta calidad</li>
                <li>✓ Diseño atemporalen</li>
                <li>✓ Confort superior</li>
                <li>✓ Sostenible y ético</li>
              </ul>
            </div>

            <div>
              <h3 class="font-semibold text-neutral-900 mb-2">Envío y Devoluciones</h3>
              <p class="text-sm text-neutral-600">
                Envío gratis en pedidos superiores a $100. Devoluciones gratuitas dentro de 30 días.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Related Products */}
  <section class="py-12 md:py-16 bg-neutral-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-display font-bold text-brand-navy mb-8">
        Productos Relacionados
      </h2>
      <p class="text-neutral-600">
        Ver más productos de la categoría
        <a
          href={`/categoria/${product.category_id}`}
          class="text-brand-navy hover:text-brand-charcoal font-semibold ml-1"
        >
          {product.categories?.name}
        </a>
      </p>
    </div>
  </section>
</PublicLayout>
