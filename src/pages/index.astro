---
import PublicLayout from '@layouts/PublicLayout.astro';
---

<PublicLayout title="FashionMarket - Premium Men's Fashion" description="Discover our curated collection of premium men's fashion">
  {/* Hero Section */}
  <section class="bg-brand-navy text-white py-20 md:py-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl">
        <h1 class="text-5xl md:text-6xl font-display font-bold mb-6 leading-tight">
          Sofisticación Minimalista
        </h1>
        <p class="text-xl text-neutral-300 mb-8 leading-relaxed">
          Colección curada de moda masculina premium. Cada pieza diseñada para la elegancia discreta y el confort absoluto.
        </p>
        <a
          href="/productos"
          class="inline-block bg-white text-brand-navy px-8 py-4 font-semibold hover:bg-neutral-100 transition-colors"
        >
          Explorar Catálogo
        </a>
      </div>
    </div>
  </section>

  {/* Featured Categories */}
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-display font-bold text-brand-navy mb-12">
        Categorías Principales
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[
          { name: 'Camisas', slug: 'camisas', description: 'Camisas de calidad premium' },
          { name: 'Pantalones', slug: 'pantalones', description: 'Pantalones con corte perfecto' },
          { name: 'Trajes', slug: 'trajes', description: 'Trajes atemporales' },
        ].map((cat) => (
          <a
            href={`/categoria/${cat.slug}`}
            class="group"
          >
            <div class="aspect-square bg-neutral-300 mb-4 overflow-hidden">
              <div class="w-full h-full flex items-center justify-center text-neutral-500">
                Imagen de {cat.name}
              </div>
            </div>
            <h3 class="text-2xl font-display font-bold text-brand-navy group-hover:text-brand-charcoal transition-colors">
              {cat.name}
            </h3>
            <p class="text-neutral-600 mt-2">
              {cat.description}
            </p>
          </a>
        ))}
      </div>
    </div>
  </section>

  {/* USPs Section */}
  <section class="bg-brand-charcoal text-white py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 text-center">
        <div>
          <div class="text-4xl font-bold mb-4">100%</div>
          <h3 class="text-xl font-semibold mb-2">Auténtico</h3>
          <p class="text-neutral-300">
            Cada prenda verificada y certificada
          </p>
        </div>
        <div>
          <div class="text-4xl font-bold mb-4">⚡</div>
          <h3 class="text-xl font-semibold mb-2">Envío Rápido</h3>
          <p class="text-neutral-300">
            Entrega en 2-4 días laborales
          </p>
        </div>
        <div>
          <div class="text-4xl font-bold mb-4">∞</div>
          <h3 class="text-xl font-semibold mb-2">Garantía</h3>
          <p class="text-neutral-300">
            Satisfacción garantizada o devolución
          </p>
        </div>
      </div>
    </div>
  </section>
</PublicLayout>
