---
import PublicLayout from '@layouts/PublicLayout.astro';
import { supabase } from '@lib/supabase';

// Fetch productos y categorías
const { data: products } = await supabase
  .from('products')
  .select('*')
  .order('created_at', { ascending: false })
  .limit(6);

const { data: categories } = await supabase
  .from('categories')
  .select('*')
  .order('display_order');
---

<PublicLayout title="KicksPremium - Sneakers Exclusivos y Limitados" description="Sneakers únicos, colaboraciones especiales y ediciones limitadas. Travis Scott, Jordan Special, Adidas Collab y más.">
  {/* Hero Section - Full Impact */}
  <section class="relative bg-brand-black text-white overflow-hidden">
    {/* Background Pattern */}
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 35px, rgba(255,255,255,.1) 35px, rgba(255,255,255,.1) 70px);"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-32">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-block bg-brand-red text-white text-xs font-bold px-3 py-1 mb-6 uppercase tracking-wider">
            Exclusively Limited
          </div>
          <h1 class="text-5xl md:text-7xl font-display font-bold mb-6 leading-none uppercase tracking-tight">
            SNEAKERS<br/>
            <span class="text-brand-red">EXCLUSIVOS</span><br/>
            & LIMITADOS
          </h1>
          <p class="text-xl text-neutral-400 mb-8 leading-relaxed">
            Colaboraciones especiales, ediciones limitadas y piezas únicas. Travis Scott • Jordan Special • Adidas Collab • Nike Rare
          </p>
          <div class="flex flex-wrap gap-4">
            <a
              href="/productos"
              class="inline-block bg-brand-red text-white px-8 py-4 font-bold uppercase tracking-wide hover:bg-brand-orange transition-all hover:scale-105"
            >
              Explorar Colección
            </a>
            <a
              href="/categoria/limited-editions"
              class="inline-block border-2 border-white text-white px-8 py-4 font-bold uppercase tracking-wide hover:bg-white hover:text-brand-black transition-all"
            >
              Ediciones Limitadas
            </a>
          </div>
        </div>
        <div class="hidden md:block relative">
          <div class="text-[200px] leading-none opacity-10 font-display font-bold absolute -right-20 top-1/2 -translate-y-1/2">
            X
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Brands Bar - Exclusive Collabs */}
  <section class="bg-brand-gray py-6 border-y border-brand-black">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex justify-center items-center gap-8 md:gap-16 text-neutral-500 font-bold uppercase tracking-widest text-sm">
        <span class="hover:text-white transition-colors cursor-pointer">Travis Scott</span>
        <span class="hover:text-white transition-colors cursor-pointer">Jordan Special</span>
        <span class="hover:text-white transition-colors cursor-pointer">Adidas Collab</span>
        <span class="hover:text-white transition-colors cursor-pointer">Nike Rare</span>
        <span class="hover:text-white transition-colors cursor-pointer">Yeezy SZN</span>
      </div>
    </div>
  </section>

  {/* Exclusive Collections Grid */}
  <section class="py-16 md:py-24 bg-brand-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-end mb-12">
        <div>
          <h2 class="text-4xl md:text-5xl font-display font-bold text-white uppercase tracking-tight">
            Colecciones
          </h2>
          <p class="text-neutral-500 mt-2">Piezas exclusivas y únicamente disponibles</p>
        </div>
        <a href="/productos" class="text-brand-red font-bold uppercase text-sm hover:text-brand-orange transition-colors">
          Ver todo →
        </a>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {categories?.map((cat) => (
          <a
            href={`/categoria/${cat.slug}`}
            class="group relative bg-brand-gray overflow-hidden aspect-square hover:scale-[1.02] transition-all"
          >
            <div class="absolute inset-0 bg-gradient-to-t from-brand-black/90 via-brand-black/20 to-transparent z-10"></div>
            <div class="absolute inset-0 flex items-center justify-center text-6xl md:text-8xl opacity-30 group-hover:opacity-50 group-hover:scale-110 transition-all">
              {cat.icon}
            </div>
            <div class="absolute bottom-0 left-0 right-0 p-4 z-20">
              <h3 class="text-xl md:text-2xl font-display font-bold text-white uppercase tracking-wide group-hover:text-brand-red transition-colors">
                {cat.name}
              </h3>
              <p class="text-neutral-400 text-sm mt-1 hidden md:block">
                {cat.description?.split(':')[0]}
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  {/* Featured Products */}
  <section class="py-16 md:py-24 bg-brand-black">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-end mb-12">
        <div>
          <div class="text-brand-red font-bold uppercase text-sm tracking-wider mb-2">Hot Right Now</div>
          <h2 class="text-4xl md:text-5xl font-display font-bold text-white uppercase tracking-tight">
            Destacados
          </h2>
        </div>
        <a href="/productos" class="text-brand-red font-bold uppercase text-sm hover:text-brand-orange transition-colors">
          Ver todo →
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {products?.map((product) => (
          <a href={`/productos/${product.slug}`} class="group bg-brand-gray overflow-hidden hover:scale-[1.02] transition-all">
            {/* Image */}
            <div class="aspect-square bg-brand-dark relative overflow-hidden">
              {product.is_limited_edition && (
                <div class="absolute top-4 left-4 bg-brand-red text-white text-xs font-bold px-2 py-1 z-10 uppercase">
                  Limited
                </div>
              )}
              <img 
                src={product.images?.[0] || 'https://via.placeholder.com/400x400?text=Sneaker'}
                alt={product.name}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              />
            </div>
            {/* Info */}
            <div class="p-4">
              <div class="text-brand-red text-xs font-bold uppercase tracking-wider mb-1">
                {product.brand}
              </div>
              <h3 class="text-white font-bold text-lg group-hover:text-brand-red transition-colors line-clamp-1">
                {product.name}
              </h3>
              <div class="flex items-center gap-2 mt-2">
                <span class="text-white font-bold text-xl">
                  €{(product.price / 100).toFixed(0)}
                </span>
                {product.original_price && product.original_price > product.price && (
                  <span class="text-neutral-500 line-through text-sm">
                    €{(product.original_price / 100).toFixed(0)}
                  </span>
                )}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  {/* USPs Section */}
  <section class="bg-brand-red text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-4xl mb-2">✓</div>
          <h3 class="font-bold uppercase tracking-wide">100% Auténtico</h3>
          <p class="text-white/80 text-sm mt-1">Verificado</p>
        </div>
        <div>
          <div class="text-4xl mb-2">FAST</div>
          <h3 class="font-bold uppercase tracking-wide">Envío Express</h3>
          <p class="text-white/80 text-sm mt-1">24-48h</p>
        </div>
        <div>
          <div class="text-4xl mb-2">SYNC</div>
          <h3 class="font-bold uppercase tracking-wide">Devolución Fácil</h3>
          <p class="text-white/80 text-sm mt-1">30 días</p>
        </div>
        <div>
          <div class="text-4xl mb-2">PAY</div>
          <h3 class="font-bold uppercase tracking-wide">Pago Seguro</h3>
          <p class="text-white/80 text-sm mt-1">SSL Encriptado</p>
        </div>
      </div>
    </div>
  </section>

  {/* CTA Section - Newsletter */}
  <section class="bg-brand-dark py-20">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-4xl md:text-6xl font-display font-bold text-white uppercase tracking-tight mb-6">
        No te pierdas<br/><span class="text-brand-red">ningún drop</span>
      </h2>
      <p class="text-neutral-400 text-lg mb-8">
        Únete a nuestra lista y sé el primero en enterarte de los nuevos lanzamientos y ofertas exclusivas.
      </p>
      <form id="newsletter-form-cta" class="flex flex-col sm:flex-row gap-4 justify-center max-w-md mx-auto">
        <input 
          type="email" 
          id="newsletter-email-cta"
          name="email"
          placeholder="tu@email.com" 
          required
          class="bg-brand-gray border border-brand-gray text-white px-6 py-4 flex-1 focus:outline-none focus:border-brand-red"
        />
        <button 
          type="submit"
          id="newsletter-btn-cta"
          class="bg-brand-red text-white px-8 py-4 font-bold uppercase hover:bg-brand-orange transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
        >
          Suscribirse
        </button>
      </form>
      <div id="newsletter-message-cta" class="mt-4 text-sm"></div>
    </div>
  </section>
</PublicLayout>

<script is:inline>
  // Handle newsletter subscription (CTA Section)
  const formCta = document.getElementById('newsletter-form-cta');
  const emailInputCta = document.getElementById('newsletter-email-cta');
  const submitBtnCta = document.getElementById('newsletter-btn-cta');
  const messageDivCta = document.getElementById('newsletter-message-cta');

  if (formCta) {
    formCta.addEventListener('submit', async (e) => {
      e.preventDefault();

      const email = emailInputCta.value.trim();

      if (!email) {
        showMessageCta('Por favor ingresa un email', 'error');
        return;
      }

      // Disable form during submission
      submitBtnCta.setAttribute('disabled', 'true');
      submitBtnCta.textContent = 'Suscribiendo...';

      try {
        const response = await fetch('/api/newsletter/subscribe', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ email }),
        });

        const data = await response.json();

        if (response.ok) {
          showMessageCta(
            '✓ ¡Gracias por suscribirte! Revisa tu email para confirmar.',
            'success'
          );
          formCta.reset();
        } else {
          showMessageCta(
            data.error || 'Error al suscribirse. Intenta más tarde.',
            'error'
          );
        }
      } catch (error) {
        console.error('Newsletter subscription error:', error);
        showMessageCta('Error de conexión. Intenta más tarde.', 'error');
      } finally {
        submitBtnCta.removeAttribute('disabled');
        submitBtnCta.textContent = 'Suscribirse';
      }
    });
  }

  function showMessageCta(text, type) {
    if (!messageDivCta) return;

    messageDivCta.textContent = text;
    messageDivCta.className = `mt-4 text-sm ${
      type === 'success'
        ? 'text-green-400'
        : 'text-red-400'
    }`;

    if (type === 'success') {
      // Auto-hide success message after 5 seconds
      setTimeout(() => {
        messageDivCta.textContent = '';
        messageDivCta.className = '';
      }, 5000);
    }
  }
</script>
