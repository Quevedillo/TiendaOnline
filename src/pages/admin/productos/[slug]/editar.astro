---
import AdminLayout from '@layouts/AdminLayout.astro';
import { CloudinaryImageUpload } from '@components/islands/CloudinaryImageUpload';
import { supabase } from '@lib/supabase';

const { slug } = Astro.params;

// Obtener producto
const { data: product, error: productError } = await supabase
  .from('products')
  .select('*, categories(name)')
  .eq('slug', slug)
  .single();

if (productError || !product) {
  return Astro.redirect('/admin/productos?error=not-found');
}

// Validar y filtrar imágenes - remover URLs inválidas de placeholder
const validImages = (product.images || []).filter((img: string) => {
  if (typeof img !== 'string') return false;
  // Remover URLs que parecen ser placeholders locales
  if (img.includes('?text=') || img.startsWith('500x500')) return false;
  // Remover URLs vacías
  if (!img.trim()) return false;
  return true;
});

product.images = validImages;

// Obtener categorías
const { data: categories } = await supabase
  .from('categories')
  .select('id, name, slug')
  .order('name');
---

<AdminLayout title={`Editar: ${product.name}`} currentPage="productos">
  <div class="max-w-4xl">
    {/* Header */}
    <div class="mb-8">
      <a href="/admin/productos" class="inline-flex items-center gap-2 text-sm text-neutral-500 hover:text-brand-black transition-colors mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Volver a productos
      </a>
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-brand-black">Editar Producto</h1>
          <p class="text-neutral-500 mt-1">{product.name}</p>
        </div>
        <a
          href={`/productos/${product.slug}`}
          target="_blank"
          class="inline-flex items-center gap-2 px-4 py-2 border border-neutral-300 rounded-lg text-sm font-medium text-neutral-700 hover:bg-neutral-50 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          Ver en tienda
        </a>
      </div>
    </div>

    <form id="product-form" class="space-y-8" data-product-id={product.id}>
      {/* Basic Info Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Información Básica</h2>
        </div>
        <div class="p-6 space-y-6">
          {/* Name */}
          <div>
            <label for="name" class="block text-sm font-medium text-neutral-700 mb-2">
              Nombre del Producto <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              value={product.name}
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
            />
          </div>

          {/* Slug */}
          <div>
            <label for="slug" class="block text-sm font-medium text-neutral-700 mb-2">
              Slug (URL)
            </label>
            <input
              type="text"
              id="slug"
              name="slug"
              value={product.slug}
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
            />
            <p class="text-xs text-neutral-500 mt-1">URL: /productos/{product.slug}</p>
          </div>

          {/* Category */}
          <div>
            <label for="category_id" class="block text-sm font-medium text-neutral-700 mb-2">
              Categoría <span class="text-red-500">*</span>
            </label>
            <select
              id="category_id"
              name="category_id"
              required
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
            >
              <option value="">Selecciona una categoría</option>
              {categories?.map((cat) => (
                <option value={cat.id} selected={cat.id === product.category_id}>{cat.name}</option>
              ))}
            </select>
          </div>

          {/* Description */}
          <div>
            <label for="description" class="block text-sm font-medium text-neutral-700 mb-2">
              Descripción <span class="text-red-500">*</span>
            </label>
            <textarea
              id="description"
              name="description"
              required
              rows="4"
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all resize-none"
            >{product.description}</textarea>
          </div>
        </div>
      </div>

      {/* Pricing & Inventory Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Precio e Inventario</h2>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {/* Price */}
            <div>
              <label for="price" class="block text-sm font-medium text-neutral-700 mb-2">
                Precio (EUR) <span class="text-red-500">*</span>
              </label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-neutral-400">€</span>
                <input
                  type="number"
                  id="price"
                  name="price"
                  step="0.01"
                  min="0"
                  required
                  value={product.price}
                  class="w-full pl-8 pr-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                />
              </div>
            </div>

            {/* Compare Price */}
            <div>
              <label for="compare_price" class="block text-sm font-medium text-neutral-700 mb-2">
                Precio Original
              </label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-neutral-400">€</span>
                <input
                  type="number"
                  id="compare_price"
                  name="compare_price"
                  step="0.01"
                  min="0"
                  value={product.compare_price || ''}
                  class="w-full pl-8 pr-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                />
              </div>
              <p class="text-xs text-neutral-500 mt-1">Precio antes del descuento</p>
            </div>

            {/* Stock */}
            <div>
              <label for="stock" class="block text-sm font-medium text-neutral-700 mb-2">
                Stock <span class="text-red-500">*</span>
              </label>
              <input
                type="number"
                id="stock"
                name="stock"
                min="0"
                required
                value={product.stock}
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
              />
            </div>

            {/* Cost Price */}
            <div>
              <label for="cost_price" class="block text-sm font-medium text-neutral-700 mb-2">
                Precio de Coste (EUR)
              </label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-neutral-400">€</span>
                <input
                  type="number"
                  id="cost_price"
                  name="cost_price"
                  step="0.01"
                  min="0"
                  value={product.cost_price || ''}
                  placeholder="0.00"
                  class="w-full pl-8 pr-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                />
              </div>
              <p class="text-xs text-neutral-500 mt-1">Para calcular márgenes de beneficio</p>
            </div>
          </div>
        </div>
      </div>

      {/* Images Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Imágenes del Producto</h2>
          <p class="text-sm text-neutral-500 mt-1">Sube hasta 5 imágenes. La primera será la imagen principal.</p>
        </div>
        <div class="p-6">
          {/* Current Images */}
          {product.images && product.images.length > 0 && (
            <div class="mb-6">
              <p class="text-sm font-medium text-neutral-700 mb-3">Imágenes actuales:</p>
              <div class="grid grid-cols-2 md:grid-cols-5 gap-4" id="current-images">
                {product.images.map((img: string, index: number) => (
                  <div class="relative group aspect-square rounded-lg overflow-hidden border border-neutral-200">
                    <img
                      src={img}
                      alt={`Imagen ${index + 1}`}
                      class="w-full h-full object-cover"
                    />
                    <button
                      type="button"
                      class="remove-image-btn absolute top-2 right-2 w-6 h-6 bg-red-500 text-white rounded-full opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center"
                      data-url={img}
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    </button>
                    {index === 0 && (
                      <span class="absolute bottom-2 left-2 bg-brand-black text-white text-xs px-2 py-1 rounded">
                        Principal
                      </span>
                    )}
                  </div>
                ))}
              </div>
            </div>
          )}

          <CloudinaryImageUpload 
            client:load 
            maxFiles={5 - (product.images?.length || 0)} 
            existingImages={product.images || []}
          />
          <input type="hidden" id="images" name="images" value={JSON.stringify(product.images || [])} />
        </div>
      </div>

      {/* Additional Details Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Detalles Adicionales</h2>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {/* SKU */}
            <div>
              <label for="sku" class="block text-sm font-medium text-neutral-700 mb-2">
                SKU
              </label>
              <input
                type="text"
                id="sku"
                name="sku"
                value={product.sku || ''}
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
              />
            </div>

            {/* Material */}
            <div>
              <label for="material" class="block text-sm font-medium text-neutral-700 mb-2">
                Material
              </label>
              <input
                type="text"
                id="material"
                name="material"
                value={product.material || ''}
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
              />
            </div>

            {/* Brand */}
            <div>
              <label for="brand" class="block text-sm font-medium text-neutral-700 mb-2">
                Marca
              </label>
              <input
                type="text"
                id="brand"
                name="brand"
                value={product.brand || ''}
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
              />
            </div>

            {/* Color */}
            <div>
              <label for="color" class="block text-sm font-medium text-neutral-700 mb-2">
                Color
              </label>
              <input
                type="text"
                id="color"
                name="color"
                value={product.color || ''}
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
              />
            </div>
          </div>

          {/* Featured & Active */}
          <div class="flex flex-wrap gap-6 mt-6 pt-6 border-t border-neutral-200">
            <label class="flex items-center gap-3 cursor-pointer">
              <input
                type="checkbox"
                id="is_featured"
                name="is_featured"
                checked={product.is_featured}
                class="w-5 h-5 rounded border-neutral-300 text-brand-black focus:ring-brand-black"
              />
              <span class="text-sm font-medium text-neutral-700">Producto destacado</span>
            </label>

            <label class="flex items-center gap-3 cursor-pointer">
              <input
                type="checkbox"
                id="is_active"
                name="is_active"
                checked={product.is_active !== false}
                class="w-5 h-5 rounded border-neutral-300 text-brand-black focus:ring-brand-black"
              />
              <span class="text-sm font-medium text-neutral-700">Producto activo (visible en tienda)</span>
            </label>
          </div>
        </div>
      </div>

      {/* Actions */}
      <div class="flex items-center justify-between gap-4 pt-4">
        <button
          type="button"
          id="delete-btn"
          class="px-6 py-3 border border-red-300 text-red-600 rounded-lg font-medium hover:bg-red-50 transition-colors"
        >
          Eliminar Producto
        </button>
        
        <div class="flex items-center gap-4">
          <a
            href="/admin/productos"
            class="px-6 py-3 border border-neutral-300 rounded-lg font-medium text-neutral-700 hover:bg-neutral-50 transition-colors"
          >
            Cancelar
          </a>
          <button
            type="submit"
            id="submit-btn"
            class="px-8 py-3 bg-brand-black text-white rounded-lg font-medium hover:bg-neutral-800 transition-colors flex items-center gap-2"
          >
            <span>Guardar Cambios</span>
            <svg class="w-4 h-4 hidden animate-spin" id="loading-spinner" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </button>
        </div>
      </div>
    </form>
  </div>
</AdminLayout>

<script define:vars={{ productId: product.id }}>
  // Get current images from hidden input
  let currentImages = JSON.parse(document.getElementById('images')?.value || '[]');

  // Remove image from current images
  const removeImageBtns = document.querySelectorAll('.remove-image-btn');
  removeImageBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const url = btn.dataset.url;
      currentImages = currentImages.filter(img => img !== url);
      document.getElementById('images').value = JSON.stringify(currentImages);
      
      // Remove from DOM
      btn.closest('.aspect-square')?.remove();
      
      // Update CloudinaryImageUpload maxFiles
      const event = new CustomEvent('cloudinary-max-files-updated', {
        detail: { maxFiles: 5 - currentImages.length }
      });
      window.dispatchEvent(event);
    });
  });

  // Listen for new images from CloudinaryImageUpload
  window.addEventListener('cloudinary-images-updated', (e) => {
    const newImages = e.detail.images || [];
    currentImages = [...currentImages, ...newImages];
    document.getElementById('images').value = JSON.stringify(currentImages);
  });

  // Form submission
  const form = document.getElementById('product-form');
  const submitBtn = document.getElementById('submit-btn');
  const spinner = document.getElementById('loading-spinner');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Show loading state
    if (submitBtn) submitBtn.setAttribute('disabled', 'true');
    spinner?.classList.remove('hidden');
    
    try {
      const formData = new FormData(form);
      
      // Build product data
      const productData = {
        name: formData.get('name')?.toString().trim() || '',
        slug: formData.get('slug')?.toString().trim() || '',
        description: formData.get('description')?.toString().trim() || '',
        category_id: formData.get('category_id')?.toString().trim() || '',
        price: parseFloat(formData.get('price')?.toString() || '0'),
        compare_price: formData.get('compare_price') ? parseFloat(formData.get('compare_price')?.toString() || '0') : null,
        cost_price: formData.get('cost_price') ? parseFloat(formData.get('cost_price')?.toString() || '0') : null,
        stock: parseInt(formData.get('stock')?.toString() || '0'),
        images: JSON.parse(formData.get('images')?.toString() || '[]'),
        sku: formData.get('sku')?.toString().trim() || null,
        material: formData.get('material')?.toString().trim() || null,
        brand: formData.get('brand')?.toString().trim() || null,
        color: formData.get('color')?.toString().trim() || null,
        is_featured: formData.has('is_featured'),
        is_active: formData.has('is_active'),
      };
      
      const response = await fetch(`/api/admin/products/${productId}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(productData),
      });
      
      const result = await response.json();
      
      if (response.ok) {
        window.location.href = '/admin/productos?updated=true';
      } else {
        alert(result.error || 'Error al actualizar el producto');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al actualizar el producto');
    } finally {
      if (submitBtn) submitBtn.removeAttribute('disabled');
      spinner?.classList.add('hidden');
    }
  });

  // Delete button
  const deleteBtn = document.getElementById('delete-btn');
  deleteBtn?.addEventListener('click', async () => {
    if (!confirm('¿Estás seguro de que quieres eliminar este producto? Esta acción no se puede deshacer.')) {
      return;
    }
    
    try {
      const response = await fetch(`/api/admin/products/${productId}`, {
        method: 'DELETE',
      });
      
      if (response.ok) {
        window.location.href = '/admin/productos?deleted=true';
      } else {
        const result = await response.json();
        alert(result.error || 'Error al eliminar el producto');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al eliminar el producto');
    }
  });
</script>
