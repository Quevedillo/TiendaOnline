---
import AdminLayout from '@layouts/AdminLayout.astro';
import { CloudinaryImageUpload } from '@components/islands/CloudinaryImageUpload';
import { supabase } from '@lib/supabase';

// Obtener categorías
const { data: categories } = await supabase
  .from('categories')
  .select('id, name, slug')
  .order('name');
---

<AdminLayout title="Nuevo Producto" currentPage="productos">
  <div class="max-w-4xl">
    {/* Header */}
    <div class="mb-8">
      <a href="/admin/productos" class="inline-flex items-center gap-2 text-sm text-neutral-500 hover:text-brand-black transition-colors mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Volver a productos
      </a>
      <h1 class="text-2xl font-bold text-brand-black">Crear Nuevo Producto</h1>
      <p class="text-neutral-500 mt-1">Completa la información del producto</p>
    </div>

    <form id="product-form" class="space-y-8">
      {/* Basic Info Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Información Básica</h2>
        </div>
        <div class="p-6 space-y-6">
          {/* Name */}
          <div>
            <label for="name" class="block text-sm font-medium text-neutral-700 mb-2">
              Nombre del Producto <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
              placeholder="Ej: Zapato Oxford Premium Negro"
            />
          </div>

          {/* Slug - Auto-generated */}
          <div>
            <label for="slug" class="block text-sm font-medium text-neutral-700 mb-2">
              Slug (URL)
            </label>
            <input
              type="text"
              id="slug"
              name="slug"
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-neutral-50 text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
              placeholder="Se generará automáticamente"
              readonly
            />
            <p class="text-xs text-neutral-500 mt-1">Se genera automáticamente del nombre</p>
          </div>

          {/* Category */}
          <div>
            <label for="category_id" class="block text-sm font-medium text-neutral-700 mb-2">
              Categoría <span class="text-red-500">*</span>
            </label>
            <select
              id="category_id"
              name="category_id"
              required
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
            >
              <option value="">Selecciona una categoría</option>
              {categories?.map((cat) => (
                <option value={cat.id}>{cat.name}</option>
              ))}
            </select>
          </div>

          {/* Description */}
          <div>
            <label for="description" class="block text-sm font-medium text-neutral-700 mb-2">
              Descripción <span class="text-red-500">*</span>
            </label>
            <textarea
              id="description"
              name="description"
              required
              rows="4"
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all resize-none"
              placeholder="Descripción detallada del producto..."
            ></textarea>
          </div>
        </div>
      </div>

      {/* Pricing & Inventory Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Precio e Inventario</h2>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {/* Price */}
            <div>
              <label for="price" class="block text-sm font-medium text-neutral-700 mb-2">
                Precio (EUR) <span class="text-red-500">*</span>
              </label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-neutral-400">€</span>
                <input
                  type="number"
                  id="price"
                  name="price"
                  step="0.01"
                  min="0"
                  required
                  class="w-full pl-8 pr-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                  placeholder="0.00"
                />
              </div>
            </div>

            {/* Compare Price */}
            <div>
              <label for="compare_price" class="block text-sm font-medium text-neutral-700 mb-2">
                Precio Original
              </label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-neutral-400">€</span>
                <input
                  type="number"
                  id="compare_price"
                  name="compare_price"
                  step="0.01"
                  min="0"
                  class="w-full pl-8 pr-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                  placeholder="0.00"
                />
              </div>
              <p class="text-xs text-neutral-500 mt-1">Precio antes del descuento</p>
            </div>

            {/* Stock */}
            <div>
              <label for="stock" class="block text-sm font-medium text-neutral-700 mb-2">
                Stock <span class="text-red-500">*</span>
              </label>
              <input
                type="number"
                id="stock"
                name="stock"
                min="0"
                required
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                placeholder="0"
              />
            </div>
          </div>
        </div>
      </div>

      {/* Images Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Imágenes del Producto</h2>
          <p class="text-sm text-neutral-500 mt-1">Sube hasta 5 imágenes. La primera será la imagen principal.</p>
        </div>
        <div class="p-6">
          <CloudinaryImageUpload client:load maxFiles={5} />
          <input type="hidden" id="images" name="images" value="[]" />
        </div>
      </div>

      {/* Additional Details Card */}
      <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
        <div class="p-6 border-b border-neutral-200 bg-neutral-50">
          <h2 class="font-semibold text-brand-black">Detalles Adicionales</h2>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {/* SKU */}
            <div>
              <label for="sku" class="block text-sm font-medium text-neutral-700 mb-2">
                SKU
              </label>
              <input
                type="text"
                id="sku"
                name="sku"
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                placeholder="ZAP-OXF-001"
              />
            </div>

            {/* Material */}
            <div>
              <label for="material" class="block text-sm font-medium text-neutral-700 mb-2">
                Material
              </label>
              <input
                type="text"
                id="material"
                name="material"
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                placeholder="Cuero genuino"
              />
            </div>

            {/* Brand */}
            <div>
              <label for="brand" class="block text-sm font-medium text-neutral-700 mb-2">
                Marca
              </label>
              <input
                type="text"
                id="brand"
                name="brand"
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                placeholder="Nombre de la marca"
              />
            </div>

            {/* Color */}
            <div>
              <label for="color" class="block text-sm font-medium text-neutral-700 mb-2">
                Color
              </label>
              <input
                type="text"
                id="color"
                name="color"
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg bg-white text-brand-black placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-brand-black focus:border-transparent transition-all"
                placeholder="Negro"
              />
            </div>
          </div>

          {/* Featured & Active */}
          <div class="flex flex-wrap gap-6 mt-6 pt-6 border-t border-neutral-200">
            <label class="flex items-center gap-3 cursor-pointer">
              <input
                type="checkbox"
                id="is_featured"
                name="is_featured"
                class="w-5 h-5 rounded border-neutral-300 text-brand-black focus:ring-brand-black"
              />
              <span class="text-sm font-medium text-neutral-700">Producto destacado</span>
            </label>

            <label class="flex items-center gap-3 cursor-pointer">
              <input
                type="checkbox"
                id="is_active"
                name="is_active"
                checked
                class="w-5 h-5 rounded border-neutral-300 text-brand-black focus:ring-brand-black"
              />
              <span class="text-sm font-medium text-neutral-700">Producto activo (visible en tienda)</span>
            </label>
          </div>
        </div>
      </div>

      {/* Actions */}
      <div class="flex items-center justify-end gap-4 pt-4">
        <a
          href="/admin/productos"
          class="px-6 py-3 border border-neutral-300 rounded-lg font-medium text-neutral-700 hover:bg-neutral-50 transition-colors"
        >
          Cancelar
        </a>
        <button
          type="submit"
          id="submit-btn"
          class="px-8 py-3 bg-brand-black text-white rounded-lg font-medium hover:bg-neutral-800 transition-colors flex items-center gap-2"
        >
          <span>Crear Producto</span>
          <svg class="w-4 h-4 hidden animate-spin" id="loading-spinner" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </button>
      </div>
    </form>
  </div>
</AdminLayout>

<script>
  // Generate slug from name
  const nameInput = document.getElementById('name') as HTMLInputElement;
  const slugInput = document.getElementById('slug') as HTMLInputElement;
  
  nameInput?.addEventListener('input', () => {
    const slug = nameInput.value
      .toLowerCase()
      .normalize('NFD')
      .replace(/[\u0300-\u036f]/g, '')
      .replace(/[^a-z0-9]+/g, '-')
      .replace(/^-+|-+$/g, '');
    slugInput.value = slug;
  });

  // Listen for images from CloudinaryImageUpload
  window.addEventListener('cloudinary-images-updated', ((e: CustomEvent) => {
    const imagesInput = document.getElementById('images') as HTMLInputElement;
    if (imagesInput) {
      imagesInput.value = JSON.stringify(e.detail.images);
    }
  }) as EventListener);

  // Form submission
  const form = document.getElementById('product-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn');
  const spinner = document.getElementById('loading-spinner');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Show loading state
    if (submitBtn) submitBtn.setAttribute('disabled', 'true');
    spinner?.classList.remove('hidden');
    
    try {
      const formData = new FormData(form);
      
      // Build product data
      const productData = {
        name: formData.get('name')?.toString().trim(),
        slug: (formData.get('slug')?.toString().trim() || formData.get('name')?.toString().toLowerCase().replace(/[^a-z0-9]+/g, '-'))?.replace(/^-+|-+$/g, ''),
        description: formData.get('description')?.toString().trim(),
        category_id: formData.get('category_id')?.toString().trim(),
        price: parseFloat(formData.get('price')?.toString() || '0'),
        compare_price: formData.get('compare_price') ? parseFloat(formData.get('compare_price')?.toString() || '0') : null,
        stock: parseInt(formData.get('stock')?.toString() || '0'),
        images: JSON.parse((formData.get('images')?.toString() || '[]')),
        sku: formData.get('sku')?.toString().trim() || null,
        material: formData.get('material')?.toString().trim() || null,
        brand: formData.get('brand')?.toString().trim() || null,
        color: formData.get('color')?.toString().trim() || null,
        is_featured: formData.has('is_featured'),
        is_active: formData.has('is_active'),
      };
      
      const response = await fetch('/api/admin/products', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(productData),
      });
      
      const result = await response.json();
      
      if (response.ok) {
        window.location.href = '/admin/productos?created=true';
      } else {
        alert(result.error || 'Error al crear el producto');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al crear el producto');
    } finally {
      if (submitBtn) submitBtn.removeAttribute('disabled');
      spinner?.classList.add('hidden');
    }
  });
</script>
