import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase } from '@lib/supabase';
import { stripe } from '@lib/stripe';

// ============================================================================
// DATOS DE ÓRDENES Y STRIPE
// ============================================================================
interface StripePayment {
  id: string;
  amount: number;
  currency: string;
  created: Date;
  status: 'paid' | 'refunded';
  customer: string;
}

interface MonthlyData {
  month: string;
  sales: number;
  costs: number;
  profit: number;
}

let stripeData = {
  balance: 0,
  monthlyRevenue: 0,
  todayRevenue: 0,
  paymentsCount: 0,
  recentPayments: [] as StripePayment[],
  chargesByMonth: new Map<string, number>()
};

// ============================================================================
// DATOS DE BD (Orders)
// ============================================================================
const { data: orders } = await supabase
  .from('orders')
  .select('*')
  .eq('status', 'completed');

const now = new Date();
const oneMonthAgo = new Date(now.getTime() - 30 * 24 * 60 * 60 * 1000);
const todayStart = new Date(now.getFullYear(), now.getMonth(), now.getDate());

// Calcular ingresos desde BD
const dbMonthlyRevenue = (orders || [])
  .filter(o => new Date(o.created_at) >= oneMonthAgo && o.total_amount)
  .reduce((sum, o) => sum + (o.total_amount || 0), 0);

const dbTodayRevenue = (orders || [])
  .filter(o => new Date(o.created_at) >= todayStart && o.total_amount)
  .reduce((sum, o) => sum + (o.total_amount || 0), 0);

const dbPaymentsCount = (orders || [])
  .filter(o => new Date(o.created_at) >= oneMonthAgo)
  .length;

// Agrupar órdenes por mes
const ordersByMonth = new Map<string, number>();
(orders || []).forEach(order => {
  if (order.created_at && order.total_amount) {
    const date = new Date(order.created_at);
    const monthKey = `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}`;
    const current = ordersByMonth.get(monthKey) || 0;
    ordersByMonth.set(monthKey, current + order.total_amount);
  }
});

try {
  // Obtener balance de Stripe
  const balance = await stripe.balance.retrieve();
  stripeData.balance = balance.available.reduce((sum, b) => sum + b.amount, 0) + 
                       balance.pending.reduce((sum, b) => sum + b.amount, 0);

  // Obtener TODOS los pagos de Stripe
  const allCharges = await stripe.charges.list({ limit: 100 });
  const stripeTimestamp = Math.floor(oneMonthAgo.getTime() / 1000);
  const stripeTodayTimestamp = Math.floor(todayStart.getTime() / 1000);

  // Filtrar pagos completados
  const paidCharges = allCharges.data.filter(c => c.paid && !c.refunded);
  
  // Ingresos de Stripe este mes
  const stripeMonthlyRevenue = paidCharges
    .filter(c => c.created >= stripeTimestamp)
    .reduce((sum, c) => sum + c.amount, 0);
  
  // Ingresos de Stripe hoy
  const stripeTodayRevenue = paidCharges
    .filter(c => c.created >= stripeTodayTimestamp)
    .reduce((sum, c) => sum + c.amount, 0);

  stripeData.paymentsCount = paidCharges.filter(c => c.created >= stripeTimestamp).length;
  
  // Combinar datos de BD y Stripe (preferir BD si existen, sino Stripe)
  stripeData.monthlyRevenue = dbMonthlyRevenue || stripeMonthlyRevenue;
  stripeData.todayRevenue = dbTodayRevenue || stripeTodayRevenue;
  stripeData.paymentsCount = dbPaymentsCount || stripeData.paymentsCount;

  // Agrupar por mes para la gráfica
  paidCharges.forEach(charge => {
    const date = new Date(charge.created * 1000);
    const monthKey = `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}`;
    const current = stripeData.chargesByMonth.get(monthKey) || 0;
    stripeData.chargesByMonth.set(monthKey, current + charge.amount);
  });

  // Últimos 10 pagos
  stripeData.recentPayments = paidCharges
    .slice(0, 10)
    .map(c => ({
      id: c.id,
      amount: c.amount,
      currency: c.currency,
      created: new Date(c.created * 1000),
      status: (c.refunded ? 'refunded' : 'paid') as 'paid' | 'refunded',
      customer: c.billing_details?.email || 'N/A'
    }));
} catch (error) {
  console.error('Error fetching Stripe data:', error);
  // Usar datos de BD si Stripe falla
  stripeData.monthlyRevenue = dbMonthlyRevenue;
  stripeData.todayRevenue = dbTodayRevenue;
  stripeData.paymentsCount = dbPaymentsCount;
  
  // Usar órdenes por mes para la gráfica
  stripeData.chargesByMonth = ordersByMonth;
  
  // Usar últimas órdenes como pagos
  stripeData.recentPayments = (orders || [])
    .sort((a, b) => new Date(b.created_at).getTime() - new Date(a.created_at).getTime())
    .slice(0, 10)
    .map(o => ({
      id: o.id,
      amount: o.total_amount || 0,
      currency: 'EUR',
      created: new Date(o.created_at),
      status: 'paid' as const,
      customer: o.customer_email || 'N/A'
    }));
}

// ============================================================================
// DATOS DE PRODUCTOS (para cálculo de márgenes)
// ============================================================================
const { data: products } = await supabase
  .from('products')
  .select('id, name, price, cost_price, stock')
  .order('name');

// Calcular inversión en inventario (coste × stock)
const totalInventoryCost = (products || []).reduce((sum, p) => {
  const cost = p.cost_price || 0;
  return sum + (cost * (p.stock || 0));
}, 0);

// Calcular valor de inventario a precio de venta
const totalInventoryValue = (products || []).reduce((sum, p) => {
  return sum + ((p.price || 0) * (p.stock || 0));
}, 0);

// ============================================================================
// DATOS PARA GRÁFICA (últimos 6 meses)
// ============================================================================

// Función para generar datos mensuales
const generateMonthlyData = () => {
  const data: MonthlyData[] = [];
  for (let i = 5; i >= 0; i--) {
    const monthDate = new Date(now.getFullYear(), now.getMonth() - i, 1);
    const monthKey = `${monthDate.getFullYear()}-${String(monthDate.getMonth() + 1).padStart(2, '0')}`;
    const monthName = monthDate.toLocaleDateString('es-ES', { month: 'short', year: '2-digit' });
    
    const sales = stripeData.chargesByMonth.get(monthKey) || 0;
    // Estimamos costes como 40% de las ventas si no hay datos de cost_price
    const estimatedCosts = sales * 0.4;
    
    data.push({
      month: monthName,
      sales: sales / 100,
      costs: estimatedCosts / 100,
      profit: (sales - estimatedCosts) / 100
    });
  }
  return data;
};

// Función para generar datos semanales (últimas 4 semanas)
const generateWeeklyData = () => {
  const data: MonthlyData[] = [];
  for (let i = 3; i >= 0; i--) {
    const weekDate = new Date(now.getTime() - i * 7 * 24 * 60 * 60 * 1000);
    const weekStart = new Date(weekDate.getFullYear(), weekDate.getMonth(), weekDate.getDate() - weekDate.getDay());
    const weekEnd = new Date(weekStart.getTime() + 7 * 24 * 60 * 60 * 1000);
    
    // Buscar órdenes en esa semana
    const weekSales = (orders || [])
      .filter(o => {
        const oDate = new Date(o.created_at);
        return oDate >= weekStart && oDate < weekEnd;
      })
      .reduce((sum, o) => sum + (o.total_amount || 0), 0);
    
    const weekLabel = `${weekStart.getDate()}-${weekEnd.getDate()} ${weekStart.toLocaleDateString('es-ES', { month: 'short' })}`;
    const estimatedCosts = weekSales * 0.4;
    
    data.push({
      month: weekLabel,
      sales: weekSales / 100,
      costs: estimatedCosts / 100,
      profit: (weekSales - estimatedCosts) / 100
    });
  }
  return data;
};

// Función para generar datos diarios (últimos 7 días)
const generateDailyData = () => {
  const data: MonthlyData[] = [];
  for (let i = 6; i >= 0; i--) {
    const dayDate = new Date(now.getTime() - i * 24 * 60 * 60 * 1000);
    const dayStart = new Date(dayDate.getFullYear(), dayDate.getMonth(), dayDate.getDate());
    const dayEnd = new Date(dayStart.getTime() + 24 * 60 * 60 * 1000);
    
    const daySales = (orders || [])
      .filter(o => {
        const oDate = new Date(o.created_at);
        return oDate >= dayStart && oDate < dayEnd;
      })
      .reduce((sum, o) => sum + (o.total_amount || 0), 0);
    
    const dayLabel = dayDate.toLocaleDateString('es-ES', { weekday: 'short', day: 'numeric' });
    const estimatedCosts = daySales * 0.4;
    
    data.push({
      month: dayLabel,
      sales: daySales / 100,
      costs: estimatedCosts / 100,
      profit: (daySales - estimatedCosts) / 100
    });
  }
  return data;
};

// Función para generar datos horarios (últimas 24 horas)
const generateHourlyData = () => {
  const data: MonthlyData[] = [];
  for (let i = 23; i >= 0; i--) {
    const hourDate = new Date(now.getTime() - i * 60 * 60 * 1000);
    const hourStart = new Date(hourDate.getFullYear(), hourDate.getMonth(), hourDate.getDate(), hourDate.getHours());
    const hourEnd = new Date(hourStart.getTime() + 60 * 60 * 1000);
    
    const hourSales = (orders || [])
      .filter(o => {
        const oDate = new Date(o.created_at);
        return oDate >= hourStart && oDate < hourEnd;
      })
      .reduce((sum, o) => sum + (o.total_amount || 0), 0);
    
    const hourLabel = hourStart.toLocaleDateString('es-ES', { hour: '2-digit', minute: '2-digit' });
    const estimatedCosts = hourSales * 0.4;
    
    data.push({
      month: hourLabel,
      sales: hourSales / 100,
      costs: estimatedCosts / 100,
      profit: (hourSales - estimatedCosts) / 100
    });
  }
  return data;
};

const monthlyData = generateMonthlyData();
const weeklyData = generateWeeklyData();
const dailyData = generateDailyData();
const hourlyData = generateHourlyData();

// ============================================================================
// FUNCIONES DE FORMATO
// ============================================================================
const formatCurrency = (cents: number) => {
  return new Intl.NumberFormat('es-ES', {
    style: 'currency',
    currency: 'EUR'
  }).format(cents / 100);
};
